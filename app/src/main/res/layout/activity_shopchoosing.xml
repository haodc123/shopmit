<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/blue_global" >


    <LinearLayout
        android:id="@+id/ll_sch_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical" >
        <!--<TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/label_sch_select_shop"
            android:textColor="@color/blue_global"/>-->
        <Spinner
            android:id="@+id/sp_sch_main"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white_global"/>

        <!--Button-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center">
            <Button
                android:id="@+id/bt_sch_refr"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@color/white_global"
                android:text="@string/label_sch_refresh"
                android:textColor="@color/blue_global"
                android:textAllCaps="true"
                android:textSize="@dimen/text_global_normal"
                android:layout_marginBottom="25dp" />
            <Button
                android:id="@+id/bt_sch_enter"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:paddingTop="10dp"
                android:background="@color/white_global"
                android:text="@string/label_sch_enter"
                android:textColor="@color/blue_global"
                android:textAllCaps="true"
                android:textSize="@dimen/text_global_normal"
                android:layout_marginBottom="25dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
