<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_indicator"
    android:layout_width="match_parent"
    android:layout_height="12dp"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@color/blue_global"
    android:weightSum="5" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_tab_per_idc"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/ic_indicator" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_tab_mess_idc"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/ic_indicator" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_tab_timeline_idc"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/ic_indicator" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_tab_task_idc"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/ic_indicator" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img_tab_menu2_idc"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_marginBottom="-3dp"
            android:src="@drawable/ic_indicator" />
    </LinearLayout>

</LinearLayout>
